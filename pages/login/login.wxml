<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="/images/login/loginLog.jpg"></image>
  </view>
  <view class="login-from">
    <!-- 账号 -->
    <view class="inputView">
      <image class="nameImage" src="/images/login/name.png"></image>
      <label class="loginLab">管理员账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="phoneInput" />
    </view>
    <view class="line"></view>
    <!-- 密码 -->
    <view class="inputView">
      <image class="keyImage" src="/images/login/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <!-- 按钮 -->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">
        管理员登录
      </button>
      <!-- <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="loginAsTourist">
        游客
      </button> -->
    </view>
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="loginAsTourist">
        校友登录
      </button>
    </view>
  </view>
</view>