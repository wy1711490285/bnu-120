.item{
  display: flex;
  height: 300rpx;
  /* background-color: chartreuse; */
  margin: 10rpx;
}
video{
  width: 400rpx;
  height: 300rpx;
  margin: 10rpx;
  margin-top: 0rpx;
}
.main{
  margin: 10rpx;
}

.videoinfo {
  word-break: break-all;
  white-space: pre-wrap;
 color: grey;
 overflow: hidden;
 text-overflow: ellipsis;
 display: -webkit-box;
 -webkit-box-orient: vertical;
 -webkit-line-clamp: 3;
 font-size: medium;
}
.videotime{
 color: #000;
 font-size: medium;
 overflow: hidden;
}

.videoname {
 color: #000;
 font-size: larger;
 overflow: hidden;
 text-overflow: ellipsis;
 display: -webkit-box;
 -webkit-box-orient: vertical;
 -webkit-line-clamp: 1;
}
.text{
 margin-left: 10rpx;
}